<%- include("./includes/head") %>
<link rel="stylesheet" href="/form.css">
</head>

<body>
  <header class="header">
    <%- include("./includes/nav") %>
    </nav>
  </header>

  <main>
    <form class="form" action="/add-products" method="POST">
      <label class="form--label" for="title"> Product Title</label>
      <input class="form--input" type="text" name="title" value="<%= editMode ? product.title : '' %>" />
      <label class="form--label" for="title"> Price</label>
      <input class="form--input" type="number" step="0.01" name="price" value="<%= editMode ? product.price : '' %>" />
      <label class="form--label" for="image"> Image URL</label>
      <input class="form--input" type="text" name="image" value="<%= editMode ? product.image : '' %>" />
      <label class="form--label" for="description"> Description</label>
      <textarea class="form--input" name="description" rows="5" cols="1"><%= editMode ? product.description : '' %></textarea>
      <input type="hidden" value="<%= editMode ? product.id : null %>" name="hasId">
      <button class="form--button form--button__blue" type="submit">
        Submit
      </button>
    </form>
  </main>
  <%- include("./includes/tail") %>