<%- include("./includes/head") %>
<link rel="stylesheet" href="/form.css">
</head>

<body>
  <header class="header">
    <%- include("./includes/nav") %>
    </nav>
  </header>
  <main>
    <form action=<%= path %> class="form" method="POST">
      <% if(message){ %>
      <div class="msg msg__error"><%= message %></div>
      <% } %>
      <label for="password" class="form--label">New Password</label>
      <input type="password" class="form--input" id="password" name="password">
      <label for="confirm-password" class="form--label">Confirm Password</label>
      <input type="password" class="form--input" id="confirm-password" name="confirmPassword">
      <input type="hidden" value=<%=_csrf%> name="_csrf">
      <button class="form--button form--button__blue" type="submit">
        Submit
      </button>
    </form>
  </main>
  <%- include("./includes/tail") %>